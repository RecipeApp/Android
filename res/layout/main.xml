<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:gravity="center" android:paddingBottom="10dp"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<EditText android:id="@+id/searchIngredient"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

	</EditText>

	<ExpandableListView android:id="@+id/ingredientListView"
		android:layout_height="match_parent" android:layout_weight="1"
		android:layout_width="match_parent" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<CheckBox android:id="@+id/showVideoRecipes"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="10dp" android:layout_alignParentRight="true"
			android:layout_marginRight="6sp" android:focusable="false">
		</CheckBox>

		<TextView android:id="@+id/videoRecipeTextView"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/showVideoRecipes" android:background="#11ffffff"
			android:textSize="16sp">
		</TextView>

	</LinearLayout>
	<Button android:id="@+id/searchButton" android:layout_width="300dp"
		
		android:layout_height="40dp" android:text="@string/searchRecipe"
		android:background="#a7002a" android:textColor="#ffffff"></Button>


</LinearLayout>
